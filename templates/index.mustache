<div data-role="page" data-theme="b" >
	<div id="title">
		<h3>{{title}}</h3>
	</div>
	
	<div data-role="content">
		<p>{{task_description}}</p>
		<ul id="puzzle">
			{{# puzzle_items }}
				<li class="hint">{{to_s}}</li>
			{{/ puzzle_items }}
		</ul>
		<ul id="definitions" data-role="listview" data-inline="true" data-theme="c" data-dividertheme="b">
			<li data-role="list-divider">Definitions</li> 
			{{# definitions }}
				<li><a href="/response/{{num}}" data-transition="pop" >{{num}}. {{text}}</a></li>
			{{/ definitions }}
		</ul>
	</div>
</div>
